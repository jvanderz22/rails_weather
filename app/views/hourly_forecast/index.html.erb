<h1>Hourly Forecast</h1>
<p>Find me in app/views/hour_forecast/index.html.erb</p>

<div>
  <span> Date </span>
  <span> Time </span>
  <span> Temperature </span>
  <span> Precipitation Percentage</span>
  <span> Humidity </span>
  <span> Wind Speed </span>
  <span> Cloud Cover Percentage </span>
</div>

<% @hours.each do |hour| %>
  <div>
    <% time_zone_offset = Time.zone.now.strftime("%z").gsub("0", "").to_i %>
    <span> <%= date_from_time(hour[:time], 0) %> </span>
    <span> <%= hour_from_time(hour[:time], 0) %> </span>
    <span> <%= hour[:temperature] %> </span>
    <span> <%= convert_to_percentage(hour[:precipitation]) %> </span>
    <span> <%= convert_to_percentage(hour[:humidity]) %> </span>
    <span> <%= hour[:wind] %> </span>
    <span> <%= convert_to_percentage(hour[:sky_cover]) %> </span>
  </div>
<% end %>
